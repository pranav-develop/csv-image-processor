{
  "compilerOptions": {
    "module": "CommonJS",
    "esModuleInterop": true,
    "target": "es6",
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "build",
    "baseUrl": "./src",
    "typeRoots": ["./types"],
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": false,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "paths": {
      "*": ["*"]
    }
  },
  "ts-node": {
    "files": true
  },
  "include": ["./src"]
}
