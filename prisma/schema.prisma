generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model UploadedFile {
  id           String   @id @default(cuid())
  path         String
  originalName String
  mimetype     String
  extension    String
  size         Int
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  requestJob   Job[]    @relation("requestFile")
  resultFile   Job[]    @relation("resultFile")
}

model Job {
  id            String        @id @default(cuid())
  type          JobType
  status        JobStatus     @default(PENDING)
  requestFileId String?
  requestFile   UploadedFile? @relation("requestFile", fields: [requestFileId], references: [id])
  resultFileId  String?
  resultFile    UploadedFile? @relation("resultFile", fields: [resultFileId], references: [id])
  error         Json?
  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @updatedAt
}

model Image {
  id          String   @id @default(cuid())
  originalUrl String
  url         String? // Processed image url
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  Product     Product? @relation(fields: [productId], references: [id])
  productId   String?
}

model Product {
  id        String   @id @default(cuid())
  name      String
  images    Image[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model WebhookTopic {
  id        String        @id @default(cuid())
  topic     WebhookTopics @unique
  createdAt DateTime      @default(now())
  updatedAt DateTime      @updatedAt
  webhooks  Webhook[]

  @@index([topic])
}

model Webhook {
  id        String         @id @default(cuid())
  name      String
  url       String
  isActive  Boolean        @default(true)
  secret    String
  topics    WebhookTopic[]
  createdAt DateTime       @default(now())
  updatedAt DateTime       @updatedAt
}

enum WebhookTopics {
  JOB_STARTED
  JOB_COMPLETED
}

enum JobStatus {
  PENDING
  IN_PROGRESS
  FAILED
  COMPLETED
}

enum JobType {
  PRODUCTS_CSV
}
